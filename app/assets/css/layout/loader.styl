.loader
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 3
	background Black
	transition 500ms
.loader-ball
	position absolute
	top 50%
	left 50%
	width 20px
	height @width
	background Black
	border-radius 50%
	for ball in 1..3	
		&:nth-of-type({ball})
			animation loader-ball infinite 2s (ball - 1)*500 + 0ms both easing    
@keyframes loader-ball
	0%
		transform translateX(-100px) translateY(-50%) scale(0)
	50%
		transform translateX(-50%) translateY(-50%) scale(1)
	100%
		transform translateX(100px) translateY(-50%) scale(0)
