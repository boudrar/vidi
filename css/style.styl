@import 'nib'
@font-face
    font-family "Futura";
    src url('Futura.ttf');
global-reset()
red = #e51c23
yellow = #ffeb3b
lightBlue = #03a9f4
cyan = #00bcd4
blue = #5677fc
green = #259b24
orange = #ff9800
grey = #eeeeee
indigo = #3f51b5

White = rgba(255,255,255,.9)
Black = rgba(0,0,0,.5)
BlackLight = rgba(0,0,0,.25)
MainColor = rgba(indigo,0.25)

fontSize = 8px

borderRadius = 2px

headerHeight = 50px
iconSize = headerHeight - 10px

easing = ease-in-out

//NAVIGATION
navWidth = 300px		
navProfilHeight = 150px	
navProfilWidth	= navWidth - 10

html,body
	min-height 100%
body
	font-family 'Futura'
	font-size fontSize*2 
	padding-top headerHeight
	overflow-x hidden 
	background linear-gradient(45deg,lighten(rgba(blue,.9),10%),lighten(rgba(red,.9),10%)) 
	
	&:after
		content ''
		position fixed
		z-index -1
		width 100%
		height 100%  
		left 0
		top 0
		background linear-gradient(-45deg,lighten(rgba(indigo,.6),10%),lighten(rgba(cyan,.6),10%)) 
	&.ready
		.loader
			opacity 0
			visiblity hidden

.loader
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index 3
	background Black
	transition 500ms
.loader-ball
	position absolute
	top 50%
	left 50%
	width 20px
	height @width
	background Black
	border-radius 50%
	for ball in 1..3	
		&:nth-of-type({ball})
			animation loader-ball infinite 2s (ball - 1)*500 + 0ms both easing    
@keyframes loader-ball
	0%
		transform translateX(-100px) translateY(-50%) scale(0)
	50%
		transform translateX(-50%) translateY(-50%) scale(1)
	100%
		transform translateX(100px) translateY(-50%) scale(0)
cube_size = 600px
.cube
	position fixed
	width cube_size
	height cube_size  
	bottom 0
	right 0
	transform-style preserve-3d
	perspective 9999px
	animation cube-rotate 120s infinite both linear
.cube-face
	position absolute
	width 100%
	height 100%
	box-shadow 0 0 1px 0 Black
	for face in 1..6
		&:nth-of-type({face})
			background rgba(black,face/50)
	//background Black
		
cube_translate = cube_size/2
.cube-face-front
  transform translate3d(0, 0, cube_translate)
.cube-face-back 
  transform rotateY(180deg) translate3d(0, 0, cube_translate)
.cube-face-left 
  transform rotateY(-90deg) translate3d(0, 0, cube_translate)
.cube-face-right 
  transform rotateY(90deg) translate3d(0, 0, cube_translate)
.cube-face-top 
  transform rotateX(90deg) translate3d(0, 0, cube_translate)
.cube-face-bottom 
  transform rotateX(-90deg) translate3d(0, 0, cube_translate)	
     
@keyframes cube-rotate
	0%
		transform rotateX(0deg) rotateY(0deg)
	50%
		transform rotateX(180deg) rotateY(180deg)
	100%
		transform rotateX(360deg) rotateY(360deg)


h1	
	font-size fontSize*5
h2	
	font-size fontSize*4	
	font-weight bold 
h3	
	font-size fontSize*3
h4
	font-size fontSize*2 
input,button
	font-family 'Futura'
#App
	position relative
	z-index 1
	max-width 1200px
	margin 0 auto
	height 'calc(100% - %s)' % (headerHeight*1.5)
	transition 500ms
	overflow auto
	transform-origin 0 0
	&.on
		transform translateX(navWidth*0.5)
	&.off
		transform rotateX(90deg)

.button-hover
	cursor pointer
	box-shadow 0 0 1px 0 Black
	transition 500ms
	will-change box-shadow,tranform
	backface-visibility hidden
	&:hover
		box-shadow 0 0 1px 0 BlackLight
		transform translateY(1px)
.button
	cursor pointer

.absolute-center
	position absolute
	top 50%
	left 50%
	transform translateX(-50%) translateY(-50%)

@import 'header.styl'
@import 'nav.styl'
@import 'home.styl'
@import 'profil.styl'
@import 'video.styl'
@import 'gallery.styl'

::-webkit-scrollbar
    width 8px
    border-radius 2px 
::-webkit-scrollbar-track
	background rgba(MainColor,.25) 
	border-radius 2px 
	width 8px
::-webkit-scrollbar-thumb
	background BlackLight
	border-radius 2px 
	width 8px